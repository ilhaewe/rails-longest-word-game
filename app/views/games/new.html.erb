<h1 class="text-center my-4">New Game</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <div class="d-flex justify-content-center" style="white-space: nowrap;">
        <p class="display-4">
          <%= @letters.join(' ') %>
        </p>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/score" method="post" data-turbo="false" class="text-center">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters.join(' ') %>

        <div class="form-group">
          <input type="text" name="word" class="form-control form-control-lg" placeholder="Enter your word">
        </div>

        <button type="submit" class="btn btn-primary btn-lg mt-3">Play</button>
      </form>
    </div>
  </div>
</div>
